# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================

# Токен бота від @BotFather
BOT_TOKEN=your_bot_token_here

# ID адміністраторів (через кому або пробіл)
ADMIN_IDS=123456789

# Username адміна для підтримки (без @)
ADMIN_USERNAME=yourusername

# ==============================================
# DATABASE
# ==============================================

# SQLite (локально)
DB_PATH=./data/taxi.sqlite3

# PostgreSQL (на продакшені)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ==============================================
# MAPS & GEOCODING
# ==============================================

# Google Maps API Key (опціонально - бот використовує Nominatim за замовчуванням)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# WEBAPP (ІНТЕРАКТИВНА КАРТА)
# ==============================================

# URL WebApp з картою (GitHub Pages / Netlify)
# Приклад: https://yourusername.github.io/taxi-map/
WEBAPP_URL=

# ==============================================
# PAYMENT
# ==============================================

# Номер картки для комісії водіїв
PAYMENT_CARD_NUMBER=4149 4999 0123 4567

# ==============================================
# GROUPS (ОКРЕМІ ГРУПИ ДЛЯ МІСТ)
# ==============================================

# Київ
KYIV_GROUP_CHAT_ID=
KYIV_GROUP_INVITE_LINK=

# Дніпро
DNIPRO_GROUP_CHAT_ID=
DNIPRO_GROUP_INVITE_LINK=

# Кривий Ріг
KRYVYI_RIH_GROUP_CHAT_ID=
KRYVYI_RIH_GROUP_INVITE_LINK=

# Харків
KHARKIV_GROUP_CHAT_ID=
KHARKIV_GROUP_INVITE_LINK=

# Одеса
ODESA_GROUP_CHAT_ID=
ODESA_GROUP_INVITE_LINK=

# ==============================================
# DEPLOYMENT (PRODUCTION)
# ==============================================

# Webhook URL (для Render/Heroku)
# WEBHOOK_URL=https://your-app.onrender.com

# Render service name (автоматично визначається)
# RENDER_SERVICE_NAME=taxi-bot

# Production flag
# PRODUCTION=1

# Port (Render встановлює автоматично)
# PORT=8080
