# Telegram Bot Token (отримайте від @BotFather)
BOT_TOKEN=your_bot_token_here

# ID адміністратора(ів) через кому або пробіл
# Щоб дізнатись свій ID, напишіть боту @userinfobot
ADMIN_IDS=YOUR_TELEGRAM_ID_HERE

# ID групи/чату водіїв (опціонально, для відправки замовлень у групу)
# Щоб дізнатись ID групи, додайте бота @userinfobot в групу
# Формат: -1001234567890 (зі знаком мінус!)
DRIVER_GROUP_CHAT_ID=-1001234567890

# Google Maps API Key (опціонально, для розрахунку відстані)
# Увімкніть: Distance Matrix API, Geocoding API, Static Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Номер картки для переказу комісії
PAYMENT_CARD_NUMBER=4149 4999 0123 4567

# Шлях до бази даних SQLite
DB_PATH=data/taxi.sqlite3
